rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to read any document
    match /{document=**} {
      allow read: if true;
    }

    // Users collection:
    // - Allow anyone to read user profiles.
    // - Allow users to create their own profile.
    // - Allow users to update/delete their own profile.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // ChatRooms collection:
    // - Allow any authenticated user to create a chat room.
    // - Allow users to read chat rooms.
    // - Allow owners to update/delete chat rooms.
    match /chatRooms/{chatRoomId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.ownerId == request.auth.uid;

      // Subcollection: messages
      // - Allow authenticated users to create messages in chat rooms.
      // - Allow anyone to read messages in chat rooms.
      match /messages/{messageId} {
        allow create: if request.auth != null;
        allow read: if true;
      }
    }
  }
}